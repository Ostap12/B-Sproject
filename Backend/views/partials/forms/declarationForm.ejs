<div id="declarationModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">

      <form class="create-form" style="width: 100%;">
        <div class="form-header">
          <div class="clearfix">
            <a href="#" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span></a>
          </div>

          <h2>New Declaration</h2>
        </div>
        <div class="form-body">
          <div class="form-group">
            <label>Destination</label>
            <input type="text" class="form-control">
          </div>
          <div class="form-group">
            <label>Spendings</label>
            <div class="row spending">
              <div class="col-md-5"><input type="text" class="form-control"></div>
              <div class="col-md-5"><input type="text" class="form-control" placeholder="Amount"></div>
              <div class="col-md-1 col-md-offset-1">
                <a href="#" onclick="deleteSpending()" class="btn btn-default pull-right">
                  <span class="glyphicon glyphicon-trash"></span>
                </a>
              </div>
            </div>
            <div class="row spending">
              <div class="col-md-5"><input type="text" class="form-control"></div>
              <div class="col-md-5"><input type="text" class="form-control" placeholder="Amount"></div>
              <div class="col-md-1 col-md-offset-1">
                <a href="#" onclick="deleteSpending()" class="btn btn-default pull-right">
                  <span class="glyphicon glyphicon-trash"></span>
                </a>
              </div>
            </div>
            <div class="row spending">
              <div class="col-md-5"><input type="text" class="form-control"></div>
              <div class="col-md-5"><input type="text" class="form-control" placeholder="Amount"></div>
              <div class="col-md-1 col-md-offset-1">
                <a href="#" onclick="deleteSpending()" class="btn btn-default pull-right">
                  <span class="glyphicon glyphicon-trash"></span>
                </a>
              </div>
            </div>
            <script>
              function addSpending() {
                var spending = '<div class="row spending"><div class="col-md-5"><input type="text" class="form-control"></div><div class="col-md-5"><input type="text" class="form-control" placeholder="Amount"></div><a href="#" class="btn btn-default pull-right"><span class="glyphicon glyphicon-trash"></span></a></div></div>';
                $(".spending:nth-last-child(3)").after(spending);
              }

              function deleteSpending() {
                var index = $(this).index() + 1;
                $(".spending:nth-child("+ index+ ")").remove();
              }
            </script>
            <a href="#" onclick="addSpending()">Add new</a>

          </div>
          <!--            https://formden.com/blog/date-picker-->
          <div class="row">
            <div class="col-md-5">
              <div class="form-group">
                <label for="exampleInputFile">From date</label>
                <input class="form-control" id="date" name="date1" type="text" />
                <script>
                  $(document).ready(function() {
                    var date_input = $('input[name="date1"]'); //our date input has the name "date"
                    var container = $('.bootstrap-iso form').length > 0 ? $('.bootstrap-iso form').parent() : "body";
                    var options = {
                      format: 'dd/mm/yyyy',
                      container: container,
                      todayHighlight: true,
                      autoclose: true,
                    };
                    date_input.datepicker(options);
                  })
                </script>
              </div>
            </div>
            <div class="col-md-5">
              <div class="form-group">
                <label for="exampleInputFile">To date</label>
                <input class="form-control" id="date" name="date2" type="text" />
                <script>
                  $(document).ready(function() {
                    var date_input = $('input[name="date2"]'); //our date input has the name "date"
                    var container = $('.bootstrap-iso form').length > 0 ? $('.bootstrap-iso form').parent() : "body";
                    var options = {
                      format: 'dd/mm/yyyy',
                      container: container,
                      todayHighlight: true,
                      autoclose: true,
                    };
                    date_input.datepicker(options);
                  })
                </script>
              </div>
            </div>
          </div>


        </div>

        <div class="form-footer">
          <button type="submit" class="btn form-button">Create</button>
        </div>
      </form>


    </div>
  </div>
</div>

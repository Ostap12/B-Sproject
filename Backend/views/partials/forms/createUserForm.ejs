<div id="createUserForm" class="modal fade" role="dialog">
  <div class="modal-dialog ">
    <div class="modal-content">

      <form class="create-form" action="/db/create_user/" method="post" style="width: 100%;">
        <div class="form-header">
          <div class="clearfix">
            <a href="#" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span></a>
          </div>

          <h2>Create user</h2>
        </div>
        <div class="form-body">
          <img id="profile-image" class="center-image center-block" src="assets/images/icon-user-default.png" alt="user photo">
          <div class="form-group" style="text-align: center">

            <label class="btn form-button" for="my-file-selector">
              <span class="glyphicon glyphicon-paperclip"> </span>
              <input id="my-file-selector" type="file" accept="image/*" style="display:none;" >
              Add picture
            </label>
            <br/>
            <span class='label label-info' id="upload-file-info"></span>

          </div>
          <div class="form-group">
            <div class="row spending">
              <div class="col-md-6"><label>Email</label><input type="text" name="email" class="form-control"></div>
              <div class="col-md-6"><label>Password</label><input type="password" name="password" class="form-control"></div>
            </div>
            <div class="row spending">
              <div class="col-md-6"><label>ID</label><input type="text" name="employee_id" class="form-control"></div>
              <div class="col-md-6"><label>Username</label><input type="text" name="username" class="form-control"></div>
            </div>
            <div class="row spending">
              <div class="col-md-6"><label>Position</label><input type="text" name="position" class="form-control"></div>
              <div class="col-md-6"><label>Address</label><input type="text" name="address" class="form-control"></div>
            </div>
            <div class="row spending">
              <div class="col-md-6"><label>Place</label><input type="text" name="place" class="form-control"></div>
              <div class="col-md-6"><label>Phone number</label><input type="text" name="authphone" class="form-control"></div>
            </div>
            <div class="row spending">
              <div class="col-md-6"><label>Postal Code</label><input type="text" name="postal_code" class="form-control"></div>
            </div>
          </div>

          <script type="text/javascript">
          //TODO fix fakepath issue
            $(document).ready(function() {
              $("#my-file-selector").change(function() {
                console.log($("#my-file-selector").val());
                $("#profile-image").attr("src", $("#my-file-selector").val());
              });
            });
          </script>

        </div>

        <div class="form-footer">
          <button type="submit" class="btn form-button"></span>Submit</button>
        </div>
      </form>

    </div>
  </div>
</div>
